{{$app := env "APP_NAME"}}
{{$port := env "PORT_NUMBER"}}

global
    daemon
    maxconn 4096

defaults
    mode http
	timeout connect 5000
    timeout client  50000
    timeout server  50000

listen http-in
    bind *:{{printf $port}}{{range service $app}}
    server {{.Node}} {{.Address}}:{{.Port}}{{end}}